<?xml version="1.0" encoding="UTF-8"?>

<!-- MyBatis DTD -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ming.project.bookstore.user.dao.UserDAO">

	<insert id="insertUser" parameterType="map">
		
		INSERT INTO
			`user`
		(
			`loginId`
			, `password`
			, `name`
			, `phoneNumber`
			, `email`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{loginId}
			, #{password}
			, #{name}
			, #{phoneNumber}
			, #{email}
			, now()
			, now()
		)
		
	</insert>
	
	<select id="countLoginId" parameterType="string" resultType="int">
	
		SELECT
			count(*)
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
		
	</select>
	
	
	<select id="selectUser" parameterType="map" 
		resultType="com.ming.project.bookstore.user.model.User">
	
		SELECT
			`id`
			, `loginId`
			, `password`
			, `name`
			, `phoneNumber`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND `password` = #{password}
		
	</select>
	
	<select id="selectUserLoginId" parameterType="map"
		resultType="com.ming.project.bookstore.user.model.User">
		
		SELECT
			`id`
			, `loginId`
			, `password`
			, `name`
			, `phoneNumber`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`name` = #{name}
			AND `email` = #{email}
			
	</select>
	
</mapper>